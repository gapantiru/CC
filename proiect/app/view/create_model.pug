extends index

block content
    div(class="w3-main" style="margin-left:250px; margin-top:43px; height:calc(100% - 43px);")
        div(class="w3-third")
            br
        div(class="w3-third", style="padding-top:8%;")
            div(class="w3-card-4", style="background-color:white;")
                div(class="w3-container w3-blue w3-padding-16" style="text-align:center")
                    h2="Create Model"

                form(class="w3-container w3-padding-16" method="POST" action="/models/create_model")
                    p
                    label(class="w3-text-blue" style="margin-top:1%;")
                        b Model Name:
                    input(class="w3-input w3-border w3-light-grey" type="text" name="name")
                    p
                    label(class="w3-text-blue" style="margin-top:1%;")
                        b Dataset
                        br
                    select(class="w3-select w3-light-grey" name='datasetId')
                        option(value='' selected=true) None
                        for dataset in datasets
                            option(value=dataset.datasetID, selected=false) #{dataset.displayName}
                    br
                    input(class="w3-btn w3-blue" type="submit", value="Create Model" style="margin-top:3%;")
            br
            if errors
                div(class="w3-card-4", style="background-color:white;")
                    div(class="w3-container w3-blue w3-padding-16" style="text-align:center")
                        h2="Errors"
                    div(class="w3-container")
                        ul
                            for error in errors
                                li!= error.msg
        div(class="w3-third")
            br

    script.
        const createMenu = document.getElementById("createMenu");
        createMenu.classList.add("w3-blue");
